<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jem.algotalk"
    android:usesCleartextTraffic="true">
    <!--    권한 설정   -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/algotalk_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/algotalk_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AlgoTalk">
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="6ff220c198224d6d3c5b9ed2f163cc32" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/IntroTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jem.algotalk.MainActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>
</manifest>